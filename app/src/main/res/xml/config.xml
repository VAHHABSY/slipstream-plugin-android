<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditTextPreference
        app:key="domain"
        app:persistent="false"
        app:title="Domain"
        app:useSimpleSummaryProvider="true"/>
    
    <!-- Resolver Selection Dropdown -->
    <ListPreference
        app:key="resolver"
        app:persistent="false"
        app:title="DNS Resolver"
        app:entries="@array/resolver_entries"
        app:entryValues="@array/resolver_values"
        app:defaultValue="cloudflare"
        app:useSimpleSummaryProvider="true"/>
    
    <!-- Custom Resolver Input (only shown when Custom is selected) -->
    <EditTextPreference
        app:key="custom_resolver"
        app:persistent="false"
        app:title="Custom Resolver IP"
        app:summary="Enter custom DNS server IP (e.g., 1.1.1.1)"
        app:useSimpleSummaryProvider="true"/>
    
    <SwitchPreferenceCompat
        app:key="authoritative"
        app:persistent="false"
        app:title="Authoritative mode"/>
    <EditTextPreference
        app:key="cert"
        app:persistent="false"
        app:title="Pinned certificate (PEM path)"
        app:useSimpleSummaryProvider="true"/>
    <EditTextPreference
        app:key="keep_alive_interval"
        app:persistent="false"
        app:title="Keep-alive interval (seconds)"
        app:useSimpleSummaryProvider="true"/>
</PreferenceScreen>
